<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.adamsmith.quiztime" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="quiz"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".QuizPageActivity"
            android:label="@string/title_activity_quiz_page"
            android:launchMode="singleTop">
        </activity>
        <activity
            android:name=".ChooseSubjectActivity"
            android:label="@string/title_activity_choose_subject"
            android:launchMode="singleTop">
        </activity>
        <activity
            android:name=".NameActivity"
            android:label="@string/title_activity_name"
            android:launchMode="singleTop">
        </activity>
        <activity
            android:name=".resultPage"
            android:label="@string/title_activity_result_page"
            android:launchMode="singleTop">
        </activity>
    </application>

</manifest>
